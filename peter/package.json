{
  "name": "peter",
  "version": "0.0.0",
  "description": "description",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist  && tsc -p tsconfig.build.json && copyfiles -u 1 ./src/**/*.{json,hbs} dist/ && copyfiles .env.template dist/ && copy ./../shared dist/shared",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.4.0",
    "@nestjs/common": "^5.7.3",
    "@nestjs/core": "^5.7.3",
    "@nestjs/microservices": "^5.7.3",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.3.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "fastify": "^2.0.0",
    "fastify-formbody": "^3.1.0",
    "fastify-helmet": "^3.0.0",
    "fastify-multipart": "^0.7.0",
    "fastify-swagger": "^2.3.1",
    "grpc": "^1.18.0",
    "mysql": "^2.16.0",
    "nest-router": "^1.0.9",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.14",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.7.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.5",
    "@types/supertest": "^2.0.5",
    "copy-dir-cli": "^0.0.3",
    "copyfiles": "^2.1.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.13.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
